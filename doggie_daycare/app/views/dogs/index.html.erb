<h1>Cool Dogs</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Owner</th>
    </tr>
  </thead>
<tbody>
  <% @dogs.each do |dog| %>
    <tr>
      <td><%= dog.id %></td>
      <td><%= dog.name %></td>
      <td><%= dog.breed %></td>
      <td><%= dog.age %></td>
      <td><%= dog.owner.try(:name) %></td>
      <td><%=link_to "show dog", dog_path(dog) %></td>
      <td><%=link_to "edit dog", edit_dog_path(dog) %></td>
      <td><%=link_to "delete", dog, method: :delete, data: {confirm: "are you sure?"} %></td>
    </tr>
    <% end %>
</tbody>
</table>

<div class = "linking">
<%= link_to "Add a dog!", new_dog_path %>
</div>
<br>
<div class = "linking">
<%= link_to "See owner list", owners_path %>
</div>
